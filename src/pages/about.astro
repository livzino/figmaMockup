---
import { Icon } from "astro-icon/components";
import Base from "../layout/Base.astro";
import Columns from "../components/Columns.astro";
import Card from "../components/Card.astro";
import Headingpill from "../components/Headingpill.astro";
import Titles from "../components/Titles.astro";
import Button from "../components/Button.astro";
import Checkmark from "../components/Checkmark.astro";
import Numbers from "../components/Numbers.astro";
import Videoimg from "../components/Videoimg.astro";
import Facecard from "../components/Facecard.astro";
import Nav from "../components/Nav.astro";
import "../styles/global.css";
---

<Base>
   <Nav />
    <div class="containerabout">

	<img src="./images/heroimage.jpg" alt="heroimage" class="imghero">

	<div class="services">
			<Headingpill variant="yellow" title="services"  />
		<Titles title="Creative Services For Boost Your Business Growth" 
tekst=""/>
	</div>

</div>

<section class="firstflex">

    <div>
             <Columns cols="3">
    <Headingpill variant="green" title="Our Vision" />
    </Columns>
<Titles title="Turn your ideas into reality." 
tekst="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps."/>
<Checkmark />
    </div>
    <div>
<figure>
<img src="./images/h2photo.jpg" alt="" class="h2img">
</figure>
    </div>
 
</section>
   <Numbers />
<section class="full">
    <div>
     <Columns cols="3">
     <Headingpill title="Growing with our Clients" variant="yellow"/>
    </Columns>
<div class="secbutton">

       <Titles title="Our core values & principles" 
tekst="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps."/>
<Button />
</div>

</div>
     <Columns cols="4">
    <Card  title="Creative Ideas" variant="original" />
    <Card  title="Best Features"variant="original"/>
    <Card title="Experience"variant="original"/>
    <Card title="Easy Solutions"variant="original"/>
    </Columns>
</section>
<section class="divvid">
    <div class="centered">
<Headingpill title="our history" variant="green"/>
 <Titles title="Better Website Means A User Experience" 
tekst="Ippsum is the result of synergy between our teams and our customers. Our company culture is focused on excellent productivity, customer satisfaction, respect for team and individual achievements."/>
</div>
<Videoimg />
</section>
<section class="full">
    <div>
           <Columns cols="3">
    <Headingpill variant="yellow" title="Our team" />
    </Columns>
<Titles title="We champion the bold to achieve the extraordinary" 
tekst="Ippsum is the result of synergy between our teams and our customers. Our company culture is focused on excellent productivity, customer satisfaction, respect for team."/>
</div>
<div class="facefl">
<Facecard variant="jasmine" title="Sarah Jasmine"/>
<Facecard variant="john" title="John Carter"/>
<Facecard variant="daisy" title="Daisy Stella"/>
</div>
</section>
<section>
    <img src="../images/ctabox.png" alt="">
</section>



</Base>


<style>
    .containerabout {
  display: grid;
  place-items: center;
}
.imghero {
  width: 120%;
  height: 100%;
}
.imghero,
.services {
   grid-area: 1 / 1;

}
.services{
	padding: 3rem 3.75rem 3.625rem 3.75rem;
border-radius: 1.8125rem;
background: rgba(255, 255, 255, 0.85);

backdrop-filter: blur(5.5px);
display: inline-flex;

flex-direction: column;
align-items: flex-start;
gap: 0.625rem;

}
  .facefl{
    display: flex;
flex-flow: row;
justify-content: center;
gap: 51px;
  }
.centered {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6875rem;
    text-align: center;
  }
    .firstflex{
   display: flex;
flex-flow: row;
padding: 3rem;
    }
    .secbutton{
     display: flex;
  
 width: 74.875rem;
align-items: flex-end;
gap: 22rem;

    }
section {
 padding: 6.25rem;
    display: grid;
    grid:
      auto /
      [full-start] 1fr
      [content] minmax(0, var(--content-width))
      1fr [full-end];
    gap: 6rem 4rem;
    
   

    > * {
      grid-column: content;

    }

    .full {
      grid-column: full;
 
    }
     
     }

     .full{
            background: #F5F5F5;
         
     }
   

.h2img{
    border-radius: 1.2rem;
}
figure {
    width: 400px;
    height: auto;
  position: relative;
  
  &::before {
    --square-count: 10;
    z-index: -1;
    content: '';
    position: absolute;
    inset: -50px -50px auto auto;
    inline-size: calc(var(--square-count) * 1.34rem - .67rem);
    aspect-ratio: 1;
    background: linear-gradient(135deg, #BE965D, #976F40, #C99B61, #F0BE7B , #FFCB85, #EEBC79, #C0935B, #976F40) 0 0 / 100% 100%;
    mask:
      var(--square-pattern) 0 0 / 1.34rem 1.34rem,
      var(--square-pattern) .67rem .67rem / 1.34rem 1.34rem;
  }
 
  &::after {
    content: '';
    position: absolute;
  right: -1rem;
  top: -1rem;
    background: green;
    width: 150px;
    height: 100px;
    border-radius: 10px;
    z-index: -1;
  }
}

  
</style>