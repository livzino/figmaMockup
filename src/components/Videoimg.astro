---
import "../styles/global.css";
import { Icon } from "astro-icon/components";
---

<section>
  <figure>
    <Icon name="playButton" />
    <div class="overlay"></div>
    <img src="../images/imgvid.jpg" alt="People sitting at a table" />
  </figure>
</section>

<style>
  section {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    gap: 0.625rem;
  }

  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6875rem;
    margin-bottom: 3.875rem;
  }

  figure {
    position: relative;

    &::before {
      --square-count: 15;
      z-index: -1;
      content: "";
      position: absolute;
      inset: -50px -50px auto auto;
      inline-size: calc(var(--square-count) * 1.34rem - 0.67rem);
      aspect-ratio: 1;
      background: linear-gradient(135deg, #be965d, #976f40, #c99b61, #f0be7b, #ffcb85, #eebc79, #c0935b, #976f40) 0 0 / 100% 100%;
      mask:
        var(--square-pattern) 0 0 / 1.34rem 1.34rem,
        var(--square-pattern) 0.67rem 0.67rem / 1.34rem 1.34rem;
    }

    &::after {
      content: "";
      position: absolute;
      left: -2rem;
      bottom: -1rem;
      background: #4eaf4e;
      width: 8.1rem;
      height: 7.89231rem;
      border-radius: 1.25rem;
      z-index: -1;
    }
  }

  figure > img {
    width: 60.125rem;
    height: 23.0625rem;
    flex-shrink: 0;
    border-radius: 1.75rem;
  }

  figure [data-icon="playButton"] {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 6.8125rem;
    height: 6.8125rem;
    font-size: 3rem;
    z-index: 2;
  }

  figure .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(24, 24, 24, 0.4);
    opacity: 0.8;
    border-radius: 1.75rem;
    z-index: 1;
  }
</style>