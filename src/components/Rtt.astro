import Columns from "../components/Columns.astro";
import Titles from "../components/Titles.astro";
import "../styles/global.css";

---

<section>
    <div class="blackflex">
        <div>
        <div class="padding">
     <Columns cols="6">
     <Headingpill title="contact" variant="black"/>
    </Columns>


       <h3>Ready To Talk?</h3>
<p>Posuere sollicitudin aliquam ultrices sagittis orci a scelerisque.
Massa placerat duis ultricies lacus sed turpis. Pellentesque  pellentesque habitant morbi tristique.
</p>
</div>
<div class="btn">
<Button />
</div>
</div>
<div>
